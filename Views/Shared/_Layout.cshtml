<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cashcrusaders</title>
  
    <link href="~/css/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/cashcrusaders.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="bg-blue-600">
            <div class="container mx-auto">
                <div class="flex justify-between items-center py-4">
                  <a class="text-white text-2xl font-semibold" asp-area="" asp-controller="Home" asp-action="Index">P.O.S System</a> <img src="/img/logo.fw.png"> 
                    <button class="text-white hover:text-blue-300 focus:outline-none lg:hidden">
                        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            viewBox="0 0 24 24" class="w-6 h-6">
                            <path d="M4 6h16M4 12h16m-7 6h7"></path>
                        </svg>
                    </button>
                    <ul class="hidden lg:flex space-x-8">
                        <li class="nav-item">
                            <a class="text-white hover:text-blue-300" asp-area="" asp-controller="Home" asp-action="Index">Capture Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="text-white hover:text-blue-300" asp-area="" asp-controller="Home" asp-action="ViewProducts">View Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="text-white hover:text-blue-300" asp-area="" asp-controller="Home" asp-action="CaptureOrders">Capture Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="text-white hover:text-blue-300" asp-area="" asp-controller="Home" asp-action="CaptureSalesByDay">Capture Sales By Day</a>
                        </li>
                                                <li class="nav-item">
                            <a class="text-white hover:text-blue-300" asp-area="" asp-controller="Home" asp-action="CaptureOrderLines">Capture Order Lines</a>
                        </li>
                        <li class="nav-item">
                            <a class="text-white hover:text-blue-300" asp-area="" asp-controller="Home" asp-action="ViewSalesForToday">View Sales For Today</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br>   <br>   <br>
<footer class="bg-blue-600 border-top footer" style="color: white;">
    <div class="container mx-auto py-4">
        &copy; 2023 - Cash Crusaders POS System Assesment. <a class="hover:text-blue-300" asp-area="" asp-controller="Home" asp-action="Index">By: Oluwatosin Olaniran</a>
    </div>
</footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
